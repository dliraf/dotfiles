[include]
  path = .gitconfig.user

[alias]
  # YADM-only
  untracked = !"f() { git status --porcelain=v1 -zunormal | xargs -0n1 printf \"%s\\n\" | grep -E '^\\?\\? \\.' | cut -c4-; }; f"

[diff]
  tool = kdiff3

[difftool]
  prompt = false

[merge]
  tool = kdiff3

[core]
  pager = diff-so-fancy | less --tabs=4 -RFX

