alias l='colorls -l --group-directories-first'
alias lt='colorls -l --tree --group-directories-first'
alias lszip='jar tf'
alias lo='l --block-size=M --sort=size -l'
alias utar='tar -xvf'
alias gw='./gradlew'
#alias gradle='./gradlew'
alias n=nnn
alias json=fx

